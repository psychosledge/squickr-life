{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // React specific
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    
    // Path mapping for imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@squickr/domain": ["../domain/src/index.ts"],
      "@squickr/infrastructure": ["../infrastructure/src/index.ts"]
    },
    
    // Output
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "src/test/**/*"],
  "references": [
    { "path": "../domain" },
    { "path": "../infrastructure" }
  ]
}
